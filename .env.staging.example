# ============================================
# Staging Environment Configuration
# Copy to .env.staging and fill in actual values
# ============================================

# Application
ENVIRONMENT=staging
VERSION=staging-latest

# Docker Registry
REGISTRY=ghcr.io
FRONTEND_IMAGE=piano-tutor/frontend
BACKEND_IMAGE=piano-tutor/backend

# Database Configuration
DATABASE_URL=postgresql://piano_tutor:CHANGE_ME@postgres:5432/piano_tutor_staging
POSTGRES_DB=piano_tutor_staging
POSTGRES_USER=piano_tutor
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Authentication
JWT_SECRET=CHANGE_ME_RANDOM_64_CHAR_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Configuration
CORS_ORIGINS=https://staging.piano-tutor.com
API_URL=https://api-staging.piano-tutor.com
WS_URL=wss://api-staging.piano-tutor.com

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Upload
MAX_UPLOAD_SIZE=20971520  # 20MB
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# External Services (Optional for staging)
SENTRY_DSN=
ANALYTICS_ID=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@staging.piano-tutor.com

# AWS/Cloud Configuration (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=piano-tutor-staging

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_OAUTH=false
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true
